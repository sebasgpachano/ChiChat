<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:paddingStart="100dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/tvMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_send"
        android:gravity="center|start"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Me llamo javier parrafo muy grande para ver como aolksdnf kajsnfjasnf oasnifoansf oasnfoiansif oasnifoansfoikas oaijnsfoiasjfnjoas oaishfnoiasjfio" />

    <TextView
        android:id="@+id/tvTimeMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        tools:text="20:50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessageSent" />

</androidx.constraintlayout.widget.ConstraintLayout>