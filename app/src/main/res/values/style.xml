<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FONTS-->
    <style name="poppinsW500Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppinsW500Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppinsW500Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!--Texts Style-->
    <style name="poppinsW500Medium20h24w500" parent="poppinsW500Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!--Texts Style-->
    <style name="poppinsW500Medium18h24w500" parent="poppinsW500Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="poppinsRegular16" parent="poppinsW500Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="poppinsRegular14" parent="poppinsW500Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="poppinsBold14" parent="poppinsW500Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <!--Toolbar-->
    <style name="toolbarHeader" parent="poppinsW500Medium20h24w500">
        <item name="android:ellipsize">end</item>
    </style>

    <!--Subtitle-->
    <style name="subtitleFramework" parent="poppinsW500Medium18h24w500">
        <item name="android:ellipsize">end</item>
    </style>

    <!--User image round-->
    <style name="RoundImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--Custom  EditText -->
    <style name="customEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">48dp</item>
        <item name="font">@style/poppinsRegular16</item>
    </style>

    <style name="searchEditText" parent="poppinsW500Medium18h24w500">
        <item name="android:background">@drawable/edittext_ios_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableRight">@drawable/icon_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button-->
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:font">@style/poppinsW500Regular</item>
    </style>

    <style name="buttonStyleGrayDialog" parent="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minWidth">100dp</item>
        <item name="maxLines">1</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:paddingHorizontal">21dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/grayBackGround</item>
        <item name="android:font">@style/poppinsRegular14</item>
    </style>

    <style name="buttonStyleBlueDialog" parent="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minWidth">100dp</item>
        <item name="maxLines">1</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:paddingHorizontal">21dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/color_app</item>
        <item name="android:font">@style/poppinsRegular14</item>
    </style>
    <!-- Error TextView-->
    <style name="errorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/redError</item>
        <item name="android:visibility">gone</item>
        <item name="android:font">@style/poppinsRegular14</item>
    </style>
    <!-- MessageDialog-->
    <style name="backGroundDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <!-- Viewpager Rounded edges-->
    <style name="RoundedCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>